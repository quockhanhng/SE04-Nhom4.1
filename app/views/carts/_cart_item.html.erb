<div class="cart-page-product-content row">
  <div class="col-4">
    <div class="d-flex ml-lg-5">
      <div>
        <%= image_tag cart_item.product.image.url, size: "50x100" %>
      </div>
      <div class="ml-3">
        <%= link_to cart_item.product.name, product_path(cart_item.product), class: "title" %><br/>
        <a href="" class="category"><%= cart_item.product.find_name_category %></a>
      </div>
    </div>
  </div>
  <div class="col-2">
    <p class="price"><%= number_to_currency(cart_item.product.price.to_i, precision: 0, unit: "") %>₫</p>
  </div>
  <div class="col-2">
    <p class="quantity"><input type="number" class="form-control" id="quantity_cart_item_<%= cart_item.id %>" value="<%= cart_item.quantity %>"></p>
    <%= link_to "", cart_item_path(cart_item), method: :put, id: "update_cart_item" %>
  </div>
  <div class="col-2">
    <p class="amount"><%= number_to_currency(cart_item.amount.to_i, precision: 0, unit: "") %>₫</p>
  </div>
  <div class="col-2">
    <div class="event">
      <%= link_to "Xóa", cart_item_path(cart_item), method: :delete, class: "btn btn-danger", remote: true %>
    </div>
  </div>
</div>
<div class="line-black"></div>
