<div class="page-wrapper chiller-theme toggled">
  <%= render "admins/sidebar" %>
  <main class="page-content">
    <div class="container-fluid">
      <h2 class="text-center">TẠO MỚI DANH MỤC</h2>
      <%= form_for :category, url: admins_categories_path(:category), method: :post do |f| %>
        <div class="form-group">
          <%= f.label "Tên danh mục" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Nhập tên danh mục" %>
        </div>
        <div class="form-group">
          <%= f.label "Danh mục cha" %><br>
          <% @options = Category.can_parent.map { |c| [c.name, c.id] }.unshift ["Không có danh mục cha", nil] %>
          <%= f.select :parent_id, options_for_select(@options), {}, { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.label "Slug" %>
          <%= f.text_field :slug, class: "form-control", placeholder: "Nhập mã rút gọn" %>
        </div>
        <div class="form-group">
          <%= f.submit "Tạo mới danh mục", class: "btn btn-primary float-right" %>
        </div>
      <% end %>
    </div>
  </main>
</div>
