<div class="page-wrapper chiller-theme toggled">
  <%= render "admins/sidebar" %>
  <main class="page-content">
    <div class="container-fluid">
      <h2>DANH SÁCH DANH MỤC CỦA SÁCH</h2>
      <div class="main py-4">
        <div class="row justify-content-center">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header">
                <%= link_to "Thêm mới danh mục cho sách", new_admins_category_path, class: "btn btn-outline-primary float-right", style: "border-color: #007bff;" %>
              </div>
              <div class="table-responsive">
                <table class="table table-bordered table-striped">
                  <thead>
                  <tr style="color:White;background-color:#006699;font-weight:bold;">
                    <th scope="col">ID</th>
                    <th scope="col">Tên danh mục</th>
                    <th scope="col">Danh mục cha</th>
                    <th scope="col">Slug</th>
                    <th style="width: 10%;"></th>
                  </tr>
                  </thead>
                  <tbody>
                  <% @categories.each do |category| %>
                    <tr>
                      <td><%= category.id %></td>
                      <td><%= category.name %></td>
                      <td><%= @id_name[category.parent_id].present? ? @id_name[category.parent_id] : "Không thuộc danh mục cha" %></td>
                      <td><%= category.slug %></td>
                      <td>
                        <%= link_to "Sửa", edit_admins_category_path(category), class: "btn btn-success" %>
                        <%= link_to "Xóa", admins_category_path(category), class: "btn btn-danger", method: :delete %>
                      </td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
