<div class="login_area">
  <div class="wrapper">
    <div class="inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <h4>Payment Gateway Demo</h4>
        <p style="text-align: center">
          Register for E-Commerce websites
        </p>
        <br/><br/>
        <div class="form-holder">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
        </div>
        <div class="form-holder">
          <%= f.text_field :name, autofocus: true, placeholder: "Họ tên", class: "form-control" %>
        </div>
        <div class="form-holder">
          <%= f.text_field :phone, autofocus: true, placeholder: "Số điện thoại", class: "form-control" %>
        </div>
        <div class="form-holder">
          <%= f.text_field :address, autofocus: true, placeholder: "Địa chỉ", class: "form-control" %>
        </div>
        <div class="form-holder">
          <%= f.select :role, options_for_select([["Người mua", 1], ["Người bán", 2]]), {}, { class: "form-control" } %>
        </div>
        <div class="form-holder">
          <%= f.password_field :password, autofocus: true, placeholder: "Mật khẩu", class: "form-control" %>
        </div>
        <div class="form-holder">
          <%= f.password_field :password, autofocus: true, placeholder: "Nhập lại mật khẩu", class: "form-control" %>
        </div>
        <div class="style">
          <%= f.submit "Đăng ký", class: "btn btn-primary" %>
        </div>
        <div style="text-align: center">
          <br/>
          <%= link_to "Nếu bạn đã có tài khoản, hãy đăng nhập", login_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
